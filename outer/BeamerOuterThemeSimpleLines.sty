\mode<presentation>

\setbeamercolor*{section in head/foot}{parent=palette primary}
\setbeamercolor*{subsection in head/foot}{parent=palette secondary}
\setbeamercolor*{progress in head/foot}{parent=palette tertiary}

\defbeamertemplate*{footline}{simplelines theme}
{
	\leavevmode%
	\hbox{%
		\begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{section in head/foot}%
			\usebeamerfont{section in head/foot}\insertsectionhead
		\end{beamercolorbox}%
		\hspace*{-.01cm}%
		\begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{subsection in head/foot}%
			\usebeamerfont{subsection in head/foot}\insertsubsectionhead
		\end{beamercolorbox}%
		\hspace*{-.01cm}%
		\begin{beamercolorbox}[wd=.334\paperwidth,ht=2.25ex,dp=1ex,center]{progress in head/foot}%
			\usebeamerfont{progress in head/foot}\insertframenumber{} / \inserttotalframenumber
		\end{beamercolorbox}%
	}%
}

\defbeamertemplate*{note page}{simplelines theme}
{%
	{%
		\scriptsize
		\insertvrule{.5\paperheight}{white!90!black}
		\vskip-.5\paperheight
		\nointerlineskip
		\vbox{
			\hspace*{.5\paperwidth}\hspace*{-1cm}\insertslideintonotes{0.5}%
			\vskip-0.5\paperheight%
			\nointerlineskip}
		\nointerlineskip
		\vbox to .5\paperheight{\vskip0.5em
			\hbox{\insertsection}%
			\setbox\beamer@tempbox=\hbox{\insertsubsection}%
			\hbox{\ifdim\wd\beamer@tempbox>1pt{\hskip1.4pt\raise3pt\hbox{\vrule
						width0.4pt height7pt\vrule width 9pt
						height0.4pt}}\hskip1pt\hbox{\begin{minipage}[t]{7.5cm}\def\breakhere{}\insertsubsection\end{minipage}}\fi%
			}%
			\setbox\beamer@tempbox=\hbox{\insertshortframetitle}%
			\hbox{\ifdim\wd\beamer@tempbox>1pt{\hskip13.8pt\raise3pt\hbox{\vrule
						width0.4pt height7pt\vrule width 9pt
						height0.4pt}}\hskip1pt\hbox{\insertshortframetitle[width=7cm]}\fi%
			}%
			\vfil}%
	}%
	\vskip.25em
	\nointerlineskip%
	{%
		\scriptsize
		\setlength{\parskip}{.8em}
		\insertnote
	}%
}

\mode
<all>
